<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Choose">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/search"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/imgSearch"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search It"
        android:textColor="#1a237e"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_below="@id/imgSearch"
        android:layout_centerHorizontal="true"
        android:padding="6dp"
        android:id="@+id/txtSearchIt"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Linear Search"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:id="@+id/btnLinearSearch"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Binary Search"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@+id/btnLinearSearch"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnBinarySearch"/>

</RelativeLayout>